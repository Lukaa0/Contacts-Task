@model Contacts_DigitalTv.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Create";
    
}

<h1>კონტაქტის დამატება</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create" id="main-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">სახელი</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surename" class="control-label">გვარი</label>
                <input asp-for="Surename" class="form-control" />
                <span asp-validation-for="Surename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">სქესი</label>
                <select asp-for="Gender" class="form-control">
                    <option value="მამრობითი">მამრობითი</option>
                    <option value="მდედრობითი">მდედრობითი</option>

                </select>    
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input type="date" value="@DateTime.Now" asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">სურათი</label>
                <input type="file" asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AddressLine" class="control-label">მისამართი</label>
                <input asp-for="AddressLine" class="form-control" />
                <span asp-validation-for="AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">ქალაქი</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ნომერი</label>
                <input asp-for="Phones[0].Number" class="form-control" />
                <span asp-validation-for="Phones[0].Number" class=text-danger></span>
            </div>
            <div class="form-group">
                <label class="control-label">ტიპი</label>
                <select asp-for="Phones[0].Type" class="form-control">
                    <option value="მობილური">მობილური</option>
                    <option value="სახლი">სახლი</option>
                    <option value="სამსახური">სამსახური</option>
                    <option value="სხვა">სხვა</option>
                </select>
                <span asp-validation-for="Phones[0].Type" class=text-danger></span>
            </div>
            <input type="submit" value="დაამატე ნომერი" id="number-btn" class="btn btn-primary" />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    $(document).ready(function () {
        var index =@Model.Phones.Count();
        $("#number-btn").click(function (e) {
            e.preventDefault();


            var numberInput = "<div class=\"form-group\">"
                +"<label class=\"control-label\" > ნომერი - " + index + "</label >"
                +"<input data-val=\"true\" data-val-required=\"ნომერი აუცილებელია\" name=\"Phones[" + index + "].Number\" class=\"form-control\" />"
                + "<span data-valmsg-for=\"Phones[" + index + "].Number\" class=text-danger></span></div>";
            var typeInput = "<div class=\"form-group\">"
                + "<label class=\"control-label\" > ტიპი - "+index +"</label >"
                +"<select name=\"Phones[" + index + "].Type\" class= \"form-control\" >"
                    +"<option value=\"მობილური\">მობილური</option>"
                    +"<option value=\"სახლი\">სახლი</option>"
                    +"<option value=\"სამსახური\">სამსახური</option>"
                    +"<option value=\"სხვა\">სხვა</option></select >"
                + "<span data-valmsg-for=\"Phones[" + index++ + "].Type\" class=text-danger></span></div>";
            var input = numberInput + typeInput;
            $(input).insertBefore(this);
        });
    });

</script>